<config>
    <sections>
        <cataloginventory>
            <groups>
                <options>
                    <fields>
                        <show_out_of_stock_last_in_category translate="label comment">
                            <label>Sort Out of Stock Products to category end</label>
                            <comment>Out of Stock products will still be automatically sort to the end of the category to display in stock products first.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <show_out_of_stock>1</show_out_of_stock>
                            </depends>
                        </show_out_of_stock_last_in_category>
                        <stock_threshold_qty>
                            <sort_order>5</sort_order>
                        </stock_threshold_qty>
                    </fields>
                </options>
            </groups>
        </cataloginventory>
    </sections>
</config>
